#File name: pdi.kv
#.:kivy 1.10.0
#:import menubar menubar
#:import pdispace pdispace
#:import processingbar processingbar
#:import toolbar toolbar
#:import properties properties
#:import statusbar statusbar

<MenuButton@Button>:
    font_size: '12sp'
    size_hint: None, 1
    width: 80

<Pdi>:
    id: _ui
    menu_bar: _menubar
    tool_bar: _toolbar
    pdi_space: _pdispaceTool
    processing_bar: _processingbar
    status_bar: _statusbar

    orientation: 'vertical'
#MENUBAR
    MenuBar:
        id: _menubar
        ui: root
        open_button: _openButton
        save_button: _saveButton
        size_hint: 1, None
        height: 24
        MenuButton:
            id: _openButton
            text: 'Open File'
            on_release: _menubar.show_load()

        MenuButton:
            id: _saveButton
            text: 'Save File'
            on_release: _menubar.show_save() #como ser√° a imagem que vai ser salva?
#TOOLBAR
    ToolBar:
        id: _toolbar
        ui: root
        trans_button: _transbutton
        bit_button: _bitbutton
        hist_button: _histbutton
        filter_button: _filterbutton
        det_button: _detbutton
        fat_button: _fatbutton

        orientation: 'horizontal'
        size_hint: 1, None
        height: 80
        padding: 20
        canvas:
            Color:
                rgba: .1,.1,.1,1
            Rectangle:
                pos: self.pos
                size: self.size

        ButtonTool:
            id: _transbutton
            toolbar: _toolbar
            group:'processing'
            text: 'Transformacao'
            size_hint: .20, 1
            on_press: self.set_index()

        ButtonTool:
            id: _bitbutton
            toolbar: _toolbar
            group:'processing'
            text: 'Plano de Bits'
            size_hint: .20, 1
            #height: 24
            on_press: self.set_index()

        ButtonTool:
            id: _histbutton
            toolbar: _toolbar
            group:'processing'
            text: 'Histograma'
            size_hint: .20, 1
            #height: 24
            on_press: self.set_index()

        ButtonTool:
            id: _filterbutton
            toolbar: _toolbar
            group:'processing'
            text: 'Filtros'
            size_hint: .20, 1
            #height: 24
            on_press: self.set_index()

        ButtonTool:
            id: _detbutton
            toolbar: _toolbar
            group:'processing'
            text: 'DetectaBordas'
            size_hint: .20, 1
            #height: 24
            on_press: self.set_index()

        ButtonTool:
            id: _fatbutton
            toolbar: _toolbar
            group:'processing'
            text: 'Fatiamento de Intensidades'
            size_hint: .20, 1
            #height: 24
            on_press: self.set_index()
#PDISPACE
    PdiSpace:
        id: _pdispaceTool
        ui: root
        panel_images: _panelImages

        TabbedPanel:
            id: _panelImages
            do_default_tab: False
            background_color: 0, 0, 0, .0
            canvas:
                Color:
                    rgba: .3,.3,.3,.2
                Rectangle:
                    pos: self.pos
                    size: self.size

#PROCESSING BAR
        ProcessingBar:
            id: _processingbar
            ui: root
            orientation: 'vertical'
            size_hint: None, 1
            width: 320

            canvas:
                Color:
                    rgba: .1,.1,.1,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'Propriedades'

#STATUS BAR
    StatusBar:
        id: _statusbar
        ui: root
        label_right: _labelright
        label_left: _labelleft

        orientation: 'horizontal'
        size_hint: 1, None
        height: 24

        Label:
            id: _labelleft
            text: "Processamento Digital de Imagens"
            font_size: '10sp'
            size_hint: 1, 1
            valign: 'bottom'
            color: [.3, .3,.3,1]

        Label:
            id: _labelright
            text: root.pdi_space.filename
            font_size: '10sp'
            size_hint: 1 , 1
            halign: 'right'
            color: [.3, .3,.3,1]

#FILECHOOSER
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: './'
            filters: ['*.png', '*.jpg','*.JPG', '*.JPEG' '*.jpeg','*.bmp']

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters: ['*.png', '*.jpg', '*.jpeg','*.bmp', '*.JPG', '*.JPEG', '*.tif']
            path: './'
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)