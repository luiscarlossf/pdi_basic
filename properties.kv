#.:kivy 1.10.0
#:import properties properties
#:import es es

<TransformProperties>:
    const_text_input: _constTextInput
    gama_text_input: _gamaTextInput
    offset_text_input: _offsetTextInput
    transform_button: _transformButton
    id: _transform

    orientation: 'vertical'
    padding: 10
    BoxLayout:
        orientation:'horizontal'
        padding: 10, 6, 6, 5
        size_hint: (1, None)
        height: 50

        Label:
            id: _constlabel
            text: 'Constante: '
            size_hint: (0.3, 1)
            font_size: '14sp'
        TextInput:
            id: _constTextInput
            size_hint: (0.7, 1)
            background_color: [0.3,0.3,0.3,1]
            foreground_color: [0.9,0.9,0.9,1]
    BoxLayout:
        orientation:'horizontal'
        padding: 10, 6, 6, 5
        size_hint: (1, None)
        height: 50
        Label:
            id: _gamaLabel
            text: 'Gama: '
            size_hint: (0.3, 1)
            font_size: '14sp'
        TextInput:
            id: _gamaTextInput
            size_hint: (0.7, 1)
            background_color: [0.3,0.3,0.3,1]
            foreground_color: [0.9,0.9,0.9,1]
    BoxLayout:
        orientation:'horizontal'
        padding: 10, 6, 6, 5
        size_hint: (1, None)
        height: 50

        Label:
            id: _offsetLabel
            text: 'Offset: '
            size_hint: (0.3, 1)
            font_size: '14sp'
        TextInput:
            id: _offsetTextInput
            size_hint: (0.7, 1)
            background_color: [0.3,0.3,0.3,1]
            foreground_color: [0.9,0.9,0.9,1]
    BoxLayout:
        orientation:'horizontal'
        padding: 10, 6, 6, 5
        size_hint: (1, None)
        height: 50

        Button:
            id: _transformButton
            size_hint:(1, None)
            height: 40
            text: 'Aplicar Transformação de Potência'
            on_press: _transform.on_press()

<HistogramProperties>:
    id : _histo
    hist: _hist
    orientation: 'vertical'
    Image:
        id: _hist

    Button:
        size_hint: (1, 0.3)
        text: 'Equalizar Histograma'
        on_press: _histo.equalizar()

<BitProperties>:
    id: _bit
    um: _um
    dois: _dois
    tres: _tres
    quatro: _quatro
    cinco: _cinco
    seis: _seis
    sete: _sete
    oito: _oito
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            CheckBox:
                id: _um
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 1'
            CheckBox:
                id: _dois
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 2'
            CheckBox:
                id: _tres
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 3'
            CheckBox:
                id: _quatro
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 4'
            CheckBox:
                id: _cinco
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 5'
            CheckBox:
                id: _seis
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 6'
            CheckBox:
                id: _sete
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 7'
            CheckBox:
                id: _oito
                #group: 'bits'
            Label:
                halign: 'left'
                text:  'Plano 8'

        Button:
            text: 'Fatiar'
            on_press: _bit.show_planes()

<FilterProperties>:
    id: _filter
    kernel_text_input: _kernel
    mediana: _mediana
    media: _media
    max: _max
    min: _min
    geometric: _geometric
    alfa: _alfa
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            CheckBox:
                id: _max
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Max'
            CheckBox:
                id: _min
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Min'
            CheckBox:
                id: _media
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Media'
            CheckBox:
                id: _mediana
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Mediana'
            CheckBox:
                id: _geometric
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Média Geométrica'
            CheckBox:
                id: _alfa
                group: 'filter'
            Label:
                halign: 'left'
                text:  'Média Alfa Cortada'

        Label:
            text: 'Kernel: (entrada, entrada)'
        TextInput:
            id: _kernel
            size_hint: (1, None)
            height: 90

        Button:
            text: 'Aplicar Filtro'
            on_press: _filter.on_press()

<DetectionProperties>:
    id: _detec
    Button:
        text: 'Detectar bordas'
        on_press: _detec.detectar()

<FatColorProperties>:
    id: _fat
    slices: _slices
    cor_input: _corInput
    color_wheel: _colorwheel
    orientation: 'vertical'
    ColorP:
        id: _colorwheel
        fat: _fat
    Label:
        id: _corInput
        text: _colorwheel.cor
    Label:
        text: 'Inserir slices de cores: '
    TextInput:
        id: _slices
    Button:
        size_hint: 1, None
        height: 50
        text: 'Aplicar Fatiamento'
        on_press: _fat.fatia()

<NoiseProperties>:
    id:_noise
    text_input_kernel: _kernel
    gaussian: _gaussian
    pepper_salt: _pepper_salt

    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            CheckBox:
                id: _gaussian
                group: 'noise'
            Label:
                halign: 'left'
                text:  'Gaussiano'
            CheckBox:
                id: _pepper_salt
                group: 'noise'
            Label:
                halign: 'left'
                text:  'Sal e pimenta'

        Label:
            text: 'Kernel: (entrada, entrada)'
        TextInput:
            id: _kernel
            size_hint: (1, None)
            height: 90

        Button:
            text: 'Aplicar Filtro'
            on_press: _noise.on_press()

<MorphProperties>:
    id: _morph
    es_name: _es_name
    es_button: _es_button
    erosion: _erosion
    dilatation: _dilatation
    opening: _opening
    closing: _closing

    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            Label:
                id: _es_name

            Button:
                id: _es_button
                text: 'Selecionar ES'
                on_press: _morph.selection_es()

        GridLayout:
            cols: 2

            CheckBox:
                id: _erosion
                group: 'morph'
            Label:
                halign: 'left'
                text:  'Erosão'

            CheckBox:
                id: _dilatation
                group: 'morph'
            Label:
                halign: 'left'
                text:  'Dilatação'

            CheckBox:
                id: _opening
                group: 'morph'
            Label:
                halign: 'left'
                text:  'Abertura'

            CheckBox:
                id: _closing
                group: 'morph'
            Label:
                halign: 'left'
                text:  'Fechamento'

        Button:
            text: 'Aplicar'
            on_press: _morph.on_press()

<ESDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        GridLayout:
            cols:2
            size_hint: 1, None
            height: 170
            Label:
                text: 'Tamanho:'
            TextInput:
                id: _tam
                text: '5'
        RV:
            id: _rv
            size_hint: 1, None
            height: 150

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select"
                on_release: root.select(_tam.text, _rv.type_es)

