<GrainsProperties>:
    orientation: 'vertical'
    Label:
        text: 'São 5 tipos de grãos:'
    Label:
        text: 'Arroz, Milho, Feijão Preto, Feijão e Fava'
    Button:
        text: 'Contar grãos'
        on_release: root.detect()
